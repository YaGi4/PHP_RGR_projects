
<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ page_title }}</title>
    <link href="{{ absolute_url(asset('styles/agentbody.css') )}}" rel="stylesheet">
</head>
<body class="body">
{% include 'blocks/Header.html.twig'%}
<h1 style="display: flex; justify-content: center">{{ page_title }}</h1>
<div class="agents_tables">
    {% if agreements != null %}
        {% for agreement in agreements %}
            <div class="entity_div">
                id: {{ agreement.getId() }}, date: {{ agreement.getDateOfConclusionInString() }}, sum of insured: {{ agreement.getSumInsured() }}
                , tariff rate: {{ agreement.getTariffRate() }}, agent name: {{ agreement.agentName }}, Type: {{ agreement.insuranceType }}
                <form class="delete_form" method="post">
                    <input type="text" name="id" value="{{ agreement.getId() }}" style = "display: none">
                    <button class="button" type="submit" name="submit">
                        <img class="image" src="{{ absolute_url(asset('images/trash.png') )}} " alt="delete">
                    </button>
                </form>
            </div>
        {% endfor %}
    {% else %}
        <div> Agreements not found </div>
    {% endif %}
</div>
</body>
</html>