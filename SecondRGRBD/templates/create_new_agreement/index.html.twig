<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ page_title }}</title>
        <link href="{{ absolute_url(asset('styles/newagentbody.css') )}}" rel="stylesheet">
    </head>
    <body class="body">
        {% include 'blocks/Header.html.twig'%}
        <div class="hh">Add new agreement</div>
        {% if agents != null %}
            {% if types != null %}
            <form class="create_form" method="post">
                <div class="input_area"><input class="input_text" type="text" name="sum_of_insured" placeholder="sum of insured"></div>
                <div class="input_area"><input class="input_text" type="text" name="tariff_rate" placeholder="tariff rate"></div>
                <div class="input_select_area">
                    <select class="input_select" name="agent">
                        {% for agent in agents %}
                            <option value="{{ agent.id }}">{{ agent.agentName }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input_select_area">
                    <select class="input_select" name="type">
                        {% for type in types %}
                            <option value="{{ type.id }}">{{ type.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button class="button" type="submit" name="submit" title="create"><div class="button_area">create</div></button>
            </form>
            {% else %}
                <a href="/create/new/insurance/type" class="link_on_create"> Create Insurance type at first </a>
            {% endif %}
        {% else %}
            <a href="/create/new/agent" class="link_on_create"> Create Agent at first </a>
        {% endif %}

    </body>
</html>