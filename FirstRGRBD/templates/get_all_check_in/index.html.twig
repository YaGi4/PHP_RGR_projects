<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ page_title }}</title>
    <link href="{{ absolute_url(asset('styles/body.css') )}}" rel="stylesheet">
</head>
<body class="body">
{% include 'blocks/Header.html.twig'%}
<h1 style="display: flex; justify-content: center">{{ page_title }}</h1>
<div class="agents_tables">
    {% if checkIns != null %}
        {% for checkIn in checkIns %}
            <div class="entity_div">
                id: {{ checkIn.id }},
                Settlement date: {{ checkIn.getSettlementDateInString() }},
                Room number: {{ checkIn.RoomNumber }},
                Client name: {{ checkIn.ClientName }},
                Booking code: {{ checkIn.BookingCode }},
                Note: {{ checkIn.Note }},
                Date of release: {{ checkIn.getDateOfReleaseInString() }},
                Payment amount: {{ checkIn.PaymentAmount }}
                <form class="delete_form" method="post">
                    <input type="text" name="id" value="{{ checkIn.id }}" style = "display: none">
                    <button class="button" type="submit" name="submit">
                        <img class="image" src="{{ absolute_url(asset('images/trash.png') )}} " alt="delete">
                    </button>
                </form>
            </div>
        {% endfor %}
    {% else %}
        <div> check In not found </div>
    {% endif %}
</div>
</body>
</html>