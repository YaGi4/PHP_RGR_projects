<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ page_title }}</title>
    <link href="{{ absolute_url(asset('styles/addnewbody.css') )}}" rel="stylesheet">
</head>
<body class="body">
{% include 'blocks/Header.html.twig'%}
<div class="hh">Add new Check In</div>
<form class="create_form" method="post">
    <div class="input_select_area">
        <select class="input_select" name="booking">
            {% for booking in bookings %}
                <option value="{{ booking.id }}">booking id: {{ booking.id }} room: {{ booking.RoomNumber }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="input_area"><input class="input_text" type="text" name="note" placeholder="note"></div>
    <div class="input_time">заселение:<input class="input_select" type="datetime-local" name="settlement_date"></div>
    <div class="input_time">выселение:<input class="input_select" type="datetime-local" name="date_of_release"></div>
    <button class="button" type="submit" name="submit" title="create"><div class="button_area">create</div></button>
</form>
</body>
</html>