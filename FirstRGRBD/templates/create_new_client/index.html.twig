<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ page_title }}</title>
        <link href="{{ absolute_url(asset('styles/addnewbody.css') )}}" rel="stylesheet">
    </head>
    <body class="body">
        {% include 'blocks/Header.html.twig'%}
        <div class="hh">Add new Client</div>
        <form class="create_form" method="post">
            <div class="input_area"><input class="input_text" type="text" name="name" placeholder="name"></div>
            <div class="input_area"><input class="input_text" type="text" name="surname" placeholder="surname"></div>
            <div class="input_area"><input class="input_text" type="text" name="patronymic" placeholder="patronymic"></div>
            <div class="input_area"><input class="input_text" type="text" name="commentary" placeholder="commentary"></div>
            <div class="input_area"><input class="input_text" type="text" name="passport_data" placeholder="passport data"></div>
            <div class="input_area">
                Discounts:
                {% for discount in discounts %}
                    <div><input name="{{ discount.getId() }}" type="checkbox" value="{{ discount.getId() }}">{{ discount.getAmountOfDiscount() }}% -- {{ discount.getDiscountTypeCharacter() }}</div>
                {% endfor %}
            </div>
            <button class="button" type="submit" name="submit" title="create"><div class="button_area">create</div></button>
        </form>
    </body>
</html>