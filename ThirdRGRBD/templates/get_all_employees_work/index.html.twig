<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ page_title }}</title>
    <link href="{{ absolute_url(asset('styles/home.css') )}}" rel="stylesheet">
</head>
<body class="body">
{% include 'blocks/LeftPanel.html.twig'%}

<div class="agents_tables" >
    <a class="links" style="margin: 5vh" href="/create/new/employees/work">
        Create new employee work
    </a>
    {% if employees_work != null %}
        {% for ew in employees_work %}
            <div class="entity_div">
                id: {{ ew.id }},
                Employee name: {{ ew.EName }},
                Job id: {{ ew.idJob }}
                <form class="delete_form" method="post">
                    <input type="text" name="id" value="{{ ew.id }}" style = "display: none">
                    <button class="button_delete" type="submit" name="submit">delete</button>
                </form>
            </div>
        {% endfor %}
    {% else %}
        <div> Employeers not found </div>
    {% endif %}
</div>
</body>
</html>